# Django Production Environment Variables
# Save this as /var/www/college-backend/.env on your server

# SECURITY WARNING: Generate a new secret key for production!
# You can generate one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Production settings
DEBUG=False
ALLOWED_HOSTS=72.61.147.23,localhost,127.0.0.1

# Database Configuration (PostgreSQL recommended for production)
# Option 1: Individual database settings
DB_NAME=college_db
DB_USER=college_user
DB_PASSWORD=your-strong-database-password
DB_HOST=localhost
DB_PORT=5432

# Option 2: Or use DATABASE_URL format (uncomment if using this format)
# DATABASE_URL=postgresql://college_user:your-strong-database-password@localhost:5432/college_db

# CORS settings for production
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=http://72.61.147.23,https://72.61.147.23

# Email settings (optional, for password reset, etc.)
